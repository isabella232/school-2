<% content_for :body_content_title do %>
  <%= @student.first_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>First Name</h1>
    <p>
      <%=raw @student.first_name %>
    </p>
  </section>
  <section>
    <h1>Middle Name</h1>
    <p>
      <%=raw @student.middle_name %>
    </p>
  </section>
  <section>
    <h1>Last Name</h1>
    <p>
      <%=raw @student.last_name %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%=raw @student.photo_id %>
    </p>
  </section>
  <section>
    <h1>Section</h1>
    <p>
      <%=raw @student.section_id %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @student.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="students">
      <% @students.each do |student| %>
        <li>
          <%= link_to student.first_name, refinery.students_student_path(student) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>

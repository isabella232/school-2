<%= form_for [refinery, :employees_admin, @role] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @role,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.roles.admin.roles.role'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @role.title) -%>
<% end -%>

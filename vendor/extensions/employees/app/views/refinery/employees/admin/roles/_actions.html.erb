<ul>
  <% if ::Refinery::Employees::Admin::RolesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.employees_admin_roles_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_employees_admin_role_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Employees::Admin::RolesController.sortable? && ::Refinery::Employees::Role.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.employees_admin_roles_path,
                     t('.reorder', what:  "Roles"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.employees_admin_roles_path,
                      t('.reorder_done', what: "Roles"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>

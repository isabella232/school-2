.container
  ul.breadcrumb
    li
      = link_to root_page.title, refinery.root_path
    li.active
      = @page.menu_title

  .titles
    .pull-left
      h1.headinglefttitle
        = @page.menu_title
    i.icon-group

  .row.mt40
    .col-lg-12.col-md-12.col-sm-12.col-xs-12
      section.row id='ourteam'
        ul.thumbnails.clearfix
          - @coaches.each do |coach|
            li.col-lg-6.col-md-6.col-sm-12.col-xs-12.employe-thumb
              .row
                .col-lg-4.col-md-4.col-sm-12.col-xs-12
                  .thumbnail
                    = image_tag coach.photo_url, alt: coach.full_name
                .col-lg-8.col-md-8.col-sm-12.col-xs-12
                  p.username
                    = coach.full_name
                    br
                    span= coach.role.title
                    p.mt10
                      = raw coach.description.truncate(300)
  .row.mt40 
